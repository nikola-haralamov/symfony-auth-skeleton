{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block messages %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div id="alert-additional-content-5" class="p-4 border border-gray-300 rounded-lg bg-gray-50 dark:border-gray-600 dark:bg-gray-800" role="alert">
            <div class="flex items-center">
                <svg aria-hidden="true" class="w-5 h-5 mr-2 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Info</span>
                <h3 class="text-lg font-medium text-gray-700 dark:text-gray-300">
                    {{ flash_error }}
                </h3>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block body %}
    {% if app.user %}


        {% include 'partials/search.html.twig' %}

        {% for project in data %}
            <div class="project">
                <h5>
                    <a href="{{ project.repository_url }}" target="_blank">
                        {{ project.name }}
                    </a>
                </h5>
                <div>{{ project.description }}</div>
                <small>
                    <p>
                        Latest release
                        <strong>{{ project.latest_release_number }}</strong>
                        ||
                        Updated about
                        <strong>
                            {{ project.latest_stable_release_published_at }}
                        </strong>
                    </p>
                </small>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
